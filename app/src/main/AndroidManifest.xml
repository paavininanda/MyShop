<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nupurbaghel.myshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyShop"
        android:allowBackup="true"
        android:icon="@drawable/mainlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- android:theme="@style/AppTheme"> -->

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".ScrollActivity"
            android:parentActivityName="com.nupurbaghel.myshop.HomeActivity"
            />
        <activity android:name=".ProductActivity" />
        <activity android:name=".ViewCartActivity"
            android:parentActivityName="com.nupurbaghel.myshop.HomeActivity"
            />
        <activity android:name=".CheckOutActivity"
            android:parentActivityName="com.nupurbaghel.myshop.HomeActivity"
            />
        <activity android:name=".AllOrdersActivity"
            android:parentActivityName="com.nupurbaghel.myshop.HomeActivity"
            />
    </application>

</manifest>